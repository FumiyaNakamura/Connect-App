<%= form_for(@user, url: yield(:url)) do |f|  %>
  <%= render "shared/error_messages", object: f.object %>
  
  <%= f.label :名前  %><br>
  <%= f.text_field :name %><br>
  
  <%= f.label :Eメール %><br>
  <%= f.email_field :email %><br>
  
  <%= f.label :パスワード %><br>
  <%= f.password_field :password %><br>
  
  <%= f.label :パスワード確認 %><br>
  <%= f.password_field :password_confirmation %><br>
  
  <%= f.label :アイコン画像 %><br>
  <%= f.file_field :image, accept: "image/jpg,image/gif,image/png" %><br>
  
  <%= f.submit yield(:button_text), class: "btn btn-default" %>
<% end %>