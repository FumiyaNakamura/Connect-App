<h1 class="underline-common col-md-offset-5">ログイン画面</h1>
<div class="col-md-offset-1">  
  <div class=" mt-100px">
    <%= form_for(:session, url: login_path) do |f| %>
      <p><%= f.label :メールアドレス %></p>
      <p><%= f.email_field :email, class: "form-size-lg" %></p>
      <p>
        <%= f.label :パスワード %>
        <%= link_to "パスワードを忘れた", new_password_reset_path %>
      </p>
      <p><%= f.password_field :password, class: "form-size-lg" %></p>
      <%= f.label :remember_me do %>
        <%= f.check_box :remember_me %>
        <span>ログイン状態を保持する</span>
      <% end %>
      <p><%= f.submit :ログイン, class: "btn btn-info button-size-lg" %></p>
      <%= link_to "新規登録はこちら", signup_path, class: "margin" %>
    <% end %>
  </div>
</div>