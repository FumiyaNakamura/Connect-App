<div class="row">
  <h1 class="underline-resetting-password col-md-offset-3">パスワードの再設定</h1>
</div>
<div class="mt-90px">
    <%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>
      <%= render 'shared/error_messages', object: f.object  %>
      <%= hidden_field_tag :email, @user.email %>
      <p><%= f.label :パスワード %></p>
      <p><%= f.password_field :password, class: "form-size-lg" %></p>
      <p><%= f.label :パスワード（確認） %></p>
      <p><%= f.password_field :password_confirmation, class: "form-size-lg" %></p>
      <p><%= f.submit "パスワードを更新する", class: "btn btn-info button-size-lg mt-30px" %></p>
    <% end %>
</div>