<h1>パスワードの再設定</h1>

<div>
    <%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>
      <%= render 'shared/error_messages', object: f.object  %>

      <%= hidden_field_tag :email, @user.email %>

      <%= f.label :パスワード %><br>
      <%= f.password_field :password%><br>

      <%= f.label :パスワード（確認） %><br>
      <%= f.password_field :password_confirmation %><br>

      <%= f.submit "パスワードを更新する" %>
    <% end %>
</div>