<div>
    <% if @post.user.image? %>
        <%= image_tag @post.user.image.url %>
    <% else %>
        <%= image_tag "default.jpg", :size =>"50x50" %>
    <% end %>
    <%= @post.user.name %>
    <div class="panel panel-default">
        <div class="panel-heading">
            <%= @post.title %>
        </div>
        <div class="panel-body">
            <p><%= @post.content %></p>
            <% if @post.image.file.nil? %>
            <% else %> 
                <%= image_tag @post.image.url %>
            <% end %>
        </div>
    </div>
</div>
<div>
    <% if @post.comments.any? %>
        <% @post.comments.each do |comment| %>
            <% if comment.user.image? %>
                <%= image_tag comment.user.image.url %>
            <% else %>
                <%= image_tag "default.jpg", :size =>"50x50" %>
            <% end %>
            <%= comment.user.name %>
            
            
            
            <p><%= comment.content %></p>
            
            <%= time_ago_in_words(comment.created_at) %>前に作成
            <br>
            <% if current_user?(comment.user) %>
                <%= link_to "削除", post_comments_path(comment.post), method: :delete, data: { confirm: "本当に消しますか？" } %>
                <br>
            <% end %>
        <% end %>
    <% end %>
</div>
<div>
    <%= form_for([@post, @comment]) do |f| %>
        <p><%= f.label :コメント, class: "mt-70px" %></p>
        <p><%= f.text_field :content , class: "mt-10px" %></p>
        <p><%= f.submit "コメントする", class: "btn btn-info mt-10px" %></p>
    <% end %>
</div>
