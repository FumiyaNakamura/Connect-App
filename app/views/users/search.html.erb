<div class="row">
  <h1 class="underline-common col-md-offset-5">ユーザー検索</h1>
</div>

<div class="mt-50px">
  <div class="ml-60px">
    <%= form_tag(search_path, method: :get) do %>
      <p><%= label_tag "キーワード" %></p>
      <p><%= text_field_tag :search, '', class: "form-size-lg" %></p>
      <%= submit_tag '検索', class: "btn btn-info button-size-lg" %>
    <% end %>
  </div>
</div>

<div class="row mt-60px">  
  <div class="col-md-offset-4">
    <%= render "shared/user_index" %>
  </div>
</div>

