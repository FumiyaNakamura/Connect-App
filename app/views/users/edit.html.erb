<% provide(:url, user_path(@user)) %>
<% provide(:button_text, "変更を保存する") %>

<div class="row">
  <h1 class="underline-common col-md-offset-5">ユーザー編集</h1>
</div>

<h1 class="col-md-offset-5">
    <% if @user.image? %>
        <%= image_tag @user.image.url, class: "icon-size-100px" %>
    <% else %>
        <%= image_tag "default.jpg", class: "icon-size-100px" %>
    <% end %>
    <%= @user.name %>
</h1>

<%= render "layouts/form" %>