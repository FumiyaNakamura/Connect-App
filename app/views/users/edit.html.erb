<% provide(:url, user_path(@user)) %>
<% provide(:button_text, "変更を保存する") %>

<h1>ユーザー編集</h1>

<h1>
    <% if @user.image? %>
        <%= image_tag @user.image.url, :size =>'100x100'  %>
    <% else %>
        <%= image_tag "default.jpg", :size =>'100x100' %>
    <% end %>
    <%= @user.name %>
</h1>

<%= render "layouts/form" %>