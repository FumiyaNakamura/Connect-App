<div class="row">
  <h1 class="underline-mypage col-md-offset-5">マイページ</h1>
</div>
<div class="row">
  <div class="col-sm-4">
      <% if @user.image? %>
        <%= image_tag @user.image.url, :size =>'100x100'  %>
      <% else %>
        <%= image_tag "default.jpg", :size =>'100x100' %>
      <% end %>
      <h3><%= @user.name %></h3>
  </div>
  <div class="col-sm-8 mt-30px">
    <% if @user.posts.any? %>
      <%= render @posts %>
      <%= will_paginate @posts %>
    <% end %>
  </div>
</div>

