<%= form_for(@post) do |f| %>
    <% render "shared/error_messages", object: f.object %>
    <p><%= f.label :タイトル  %></p>
    <p><%= f.text_field :title, class: "form-size-lg"  %></p>
    
    <p><%= f.label :内容  %></p>
    <p><%= f.text_field :content, class: "form-size-lg"  %></p>
    
    <p><%= f.file_field :image, accept: 'image/jpeg,image/gif,image/png' %></p>
    
    <p><%= f.submit "投稿する", class: "btn btn-info button-size-lg" %></p>
<% end %>
    
<script type="text/javascript">
  $('#micropost_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > setting[:file_size_max]) {
      alert('最大ファイルサイズは5MBです。より小さいファイルを選択してください。');
    }
  });
</script>