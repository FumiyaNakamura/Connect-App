<div class="row">
  <h1 class="underline-posts-search col-md-offset-5">投稿検索</h1>
</div>

<div class="mt-50px">
  <div class="ml-60px">
    <%= form_tag(posts_search_path, method: :get) do %>
      <p><%= label_tag "キーワード" %></p>
      <p><%= text_field_tag :search, '', class: "form-size-lg" %></p>
      <%= submit_tag '検索', class: "btn btn-info button-size-lg" %>
    <% end %>
  </div>
</div>

<%= render "shared/feed_items" %>